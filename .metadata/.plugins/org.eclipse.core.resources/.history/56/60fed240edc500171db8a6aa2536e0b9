package be.bastien.ecran;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.JPanel;
import javax.swing.JPasswordField;
import javax.swing.JTextField;

import be.bastien.DAO.DAOPersonne;
import be.bastien.DAO.ProjetConnection;
import be.bastien.metier.Membre;
import be.bastien.metier.Personne;

public class Inscription extends JFrame {
	private static final long serialVersionUID = 507738300190345905L;
	private JPanel contentPane;
	private JTextField txtNom;
	private JTextField txtPrenom;
	private JTextField txtPseudo;
	private JPasswordField pwd;
	private JPasswordField pwdConfirm;

	public Inscription() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 450, 300);
		contentPane = new JPanel();
		contentPane.setLayout(null);
		setContentPane(contentPane);
		
		JLabel lblNom = new JLabel("Nom :");
		lblNom.setBounds(80, 23, 50, 14);
		contentPane.add(lblNom);
		
		txtNom = new JTextField();
		txtNom.setBounds(230, 20, 100, 20);
		contentPane.add(txtNom);
		txtNom.setColumns(10);
		
		JLabel lblPrenom = new JLabel("Pr\u00E9nom :");
		lblPrenom.setBounds(80, 63, 60, 14);
		contentPane.add(lblPrenom);
		
		txtPrenom = new JTextField();
		txtPrenom.setBounds(230, 60, 100, 20);
		contentPane.add(txtPrenom);
		txtPrenom.setColumns(10);
		
		JLabel lblPseudo = new JLabel("Pseudo :");
		lblPseudo.setBounds(80, 103, 50, 14);
		contentPane.add(lblPseudo);
		
		txtPseudo = new JTextField();
		txtPseudo.setBounds(230, 100, 100, 20);
		contentPane.add(txtPseudo);
		txtPseudo.setColumns(10);
		
		JLabel lblMotDePasse = new JLabel("Mot de passe :");
		lblMotDePasse.setBounds(80, 143, 110, 14);
		contentPane.add(lblMotDePasse);
		
		pwd = new JPasswordField();
		pwd.setBounds(230, 140, 100, 20);
		contentPane.add(pwd);
		
		JLabel lblMotDePasseConfirm = new JLabel("Confirmer mot de passe :");
		lblMotDePasseConfirm.setBounds(80, 183, 150, 14);
		contentPane.add(lblMotDePasseConfirm);
		
		pwdConfirm = new JPasswordField();
		pwdConfirm.setBounds(230, 180, 100, 20);
		contentPane.add(pwdConfirm);
		
		JButton btnRetour = new JButton("Retour");
		btnRetour.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				dispose();
				Acceuil acceuil = new Acceuil();
				acceuil.setTitle("Inscription");
				acceuil.setVisible(true);
			}
		});
		btnRetour.setBounds(324, 220, 100, 30);
		contentPane.add(btnRetour);
		
		JButton btnInscrire = new JButton("Inscription");
		btnInscrire.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				if(String.valueOf(pwd.getPassword()).equals(String.valueOf(pwdConfirm.getPassword()))) {
					DAOPersonne daoPersonne = new DAOPersonne(ProjetConnection.getInstance());
					Personne personne = new Membre();
					personne.setLogin(txtPseudo.getText());
					personne.setPassword(String.valueOf(pwd.getPassword()));
					personne.setNom(txtNom.getText());
					personne.setPrenom(txtPrenom.getText());
					if(daoPersonne.create(personne)) {
						JOptionPane.showMessageDialog(null, "Ok");
					}
					else {
						JOptionPane.showMessageDialog(null, "Nok");
					}
					
				}
				else {
					JOptionPane.showMessageDialog(null, "Les mots de passe sont différents");
				}
			}
		});
		btnInscrire.setBounds(10, 220, 100, 30);
		contentPane.add(btnInscrire);
	}
}
