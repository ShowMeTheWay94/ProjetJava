package be.bastien.DAO;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;

import be.bastien.POJO.POJOMembre;

public class DAOMembre extends DAO<POJOMembre>{
	public DAOMembre(Connection conn){
		super(conn);
	}
	
	public boolean create(POJOMembre membre) {
		return false;
	}
	
	public boolean delete(POJOMembre membre) {
		return false;
	}
	
	public boolean update(POJOMembre membre) {
		return false;
	}
	
	public POJOMembre find(POJOMembre membre) {	
		POJOMembre pojoMembre = null;
		
		try{
			ResultSet result = this.connect.createStatement(
					ResultSet.TYPE_SCROLL_INSENSITIVE,
					ResultSet.CONCUR_READ_ONLY).executeQuery("SELECT * FROM Membre WHERE IdPersonne = (SELECT IdPersonne FROM"
							+ " Personne where Login = " + membre.getLogin() + " and Password = " + membre.getPassword());
			if(result.first()) {
				pojoMembre.setNom(result.getString("NOM"));
				pojoMembre.setPrenom(result.getString("PRENOM"));
				pojoMembre.setLogin(result.getString("PSEUDO"));
				pojoMembre.setPassword(result.getString("MDP"));, result.getInt("ID_PANIER"));
			}
		}
		catch(SQLException e){
			e.printStackTrace();
		}
		
		return pojoMembre;
	}
}
